{
  "name": "@react-awesome-query-builder/main",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "5.2.0",
  "description": "User-friendly query builder for React. Demo: https://ukrbublik.github.io/react-awesome-query-builder",
  "keywords": [
    "query-builder",
    "query",
    "builder",
    "query builder",
    "react-awesome-query-builder",
    "react-query-builder",
    "where",
    "clause",
    "operators",
    "expression",
    "react",
    "reactjs",
    "component",
    "react-component",
    "ui",
    "antd",
    "antdesign",
    "ant-design",
    "material",
    "material-ui",
    "material-design",
    "configurable"
  ],
  "scripts": {
    "for-npm": "sh ./scripts/for-npm.sh",
    "for-gpr": "sh ./scripts/for-gpr.sh",
    "clean": "sh ./scripts/clean.sh",
    "check-hot": "yarn workspace @react-awesome-query-builder/examples check-hot",
    "build-examples": "yarn workspace @react-awesome-query-builder/examples build",
    "build-all": "yarn workspaces run build",
    "examples": "yarn workspace @react-awesome-query-builder/examples start",
    "sandbox-ts": "yarn workspace @react-awesome-query-builder/sandbox start",
    "sandbox-js": "yarn workspace @react-awesome-query-builder/sandbox-simple start",
    "sandbox": "yarn sandbox-ts",
    "start": "yarn examples",
    "lint": "yarn workspaces run lint",
    "lint-fix": "yarn workspaces run lint-fix",
    "test": "yarn workspace @react-awesome-query-builder/tests test",
    "reinstall": "yarn clean && yarn",
    "smoke": "yarn lint && yarn test && yarn build-all && yarn check-hot",
    "resmoke": "yarn reinstall && yarn smoke"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ukrbublik/react-awesome-query-builder.git"
  },
  "author": "Denis Oblogin <ukrbublik@gmail.com> (https://github.com/ukrbublik)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ukrbublik/react-awesome-query-builder/issues"
  },
  "homepage": "https://github.com/ukrbublik/react-awesome-query-builder",
  "funding": "https://opencollective.com/react-awesome-query-builder",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6",
    "yarn": ">=1.22.10"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "typescript": "~4.4.4"
  }
}
