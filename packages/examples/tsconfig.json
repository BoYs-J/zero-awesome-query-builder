{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "outDir": "ts_out",
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@react-awesome-query-builder/core": ["../core/modules"],
      "@react-awesome-query-builder/core/*": ["../core/modules/*"],
    },
    "skipLibCheck": true
  },
  "include": [
    "demo/**/*",
    "demo_switch/**/*",
    "index.tsx"
  ]
}
